@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">Your <span style="color: #D8AE7E;">Trustworthy</span> Real Estate <span style="color: #D8AE7E;">Consultant</span></h1>
        <div class="hero-divider"></div>
        <p class="hero-description">We help you find your dream property with ease and excellence, providing unparalleled service and expertise.</p>
        <a href="#" class="hero-cta">Discover More</a>
        <div class="hero-social">
            <a href="#" target="_blank"><i class="fab fa-facebook"></i></a>
            <a href="#" target="_blank"><i class="fab fa-whatsapp"></i></a>
            <a href="#" target="_blank"><i class="fab fa-linkedin"></i></a>
        </div>
    </div>
</section>



<!-- Featured Developers Section -->
<section class="developers-section container py-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card d-flex flex-column" style="height: 450px;">
                <div class="image-container">
                    <img src="~/img/emaar.svg" alt="Developer Logo">
                </div>
                <div class="card-body mt-auto" style="margin-top: -30px;">
                    <p class="text-uppercase" style="color: #D8AE7E;margin-bottom: -7px !important;font-weight: bold;font-size: 14px;">Premium</p>
                    <h2 class="card-title" style="text-align: start;font-weight: bold;">Developer Name</h2>
                    <p class="card-text" style="color: #696969;">A brief description of the developer goes here, showcasing their specialties.</p>
                    <a href="#" class="btn btn-outline-primary" style="width: 100% !important;">Explore</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card d-flex flex-column" style="height: 450px;">
                <div class="image-container">
                    <img src="~/img/tatweer.png" alt="Developer Logo">
                </div>

                <div class="card-body mt-auto" style="margin-top: -30px;">
                    <p class="text-uppercase" style="color: #D8AE7E;margin-bottom: -7px !important;font-weight: bold;font-size: 14px;">Premium</p>
                    <h2 class="card-title" style="text-align: start;font-weight: bold;">Developer Name</h2>
                    <p class="card-text" style="color: #696969;">A brief description of the developer goes here, showcasing their specialties.</p>
                    <a href="#" class="btn btn-outline-primary" style="width: 100% !important;">Explore</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card d-flex flex-column" style="height: 450px;">
                <div class="image-container">
                    <img src="~/img/Misr-Italia_logo.png" class="card-img-top" alt="Developer Logo">
                </div>
                <div class="card-body mt-auto" style="margin-top: -30px;">
                    <p class="text-uppercase" style="color: #D8AE7E; margin-bottom: -7px !important; font-weight: bold; font-size: 14px;">Premium</p>
                    <h2 class="card-title" style="text-align: start; font-weight: bold;">Developer Name</h2>
                    <p class="card-text" style="color: #696969;">A brief description of the developer goes here, showcasing their specialties.</p>
                    <a href="#" class="btn btn-outline-primary" style="width: 100% !important;">Explore</a>
                </div>
            </div>
        </div>

        <!-- Additional developer cards as needed -->
    </div>
    <div class="text-center mt-4">
        <button class="btn btn-outline-dark">
            <i class="fas fa-th-large me-2"></i> View All
        </button>
    </div>
</section>


<!-- Projects Section -->
