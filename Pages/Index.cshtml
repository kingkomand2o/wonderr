            <div class="col">
                <div class="card bg-dark border-0">
                    <div class="project-image-container">
                        <img src="~/img/residential.jpg" class="card-img-top" alt="Project Image">
                    </div>
                    <div class="card-body text-center py-4">
                        <h3 class="card-title mb-4" style="color: #D8AE7E; font-weight: bold;">Residential</h3>
                        <a href="#" class="btn btn-outline-primary px-5">Explore</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark border-0">
                    <div class="project-image-container">
                        <img src="~/img/administrative.jpg" class="card-img-top" alt="Project Image">
                    </div>
                    <div class="card-body text-center py-4">
                        <h3 class="card-title mb-4" style="color: #D8AE7E; font-weight: bold;">Administrative</h3>
                        <a href="#" class="btn btn-outline-primary px-5">Explore</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark border-0">
                    <div class="project-image-container">
