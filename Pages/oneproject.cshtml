@page "/oneproject/{id:int}"
@model wonderr.Pages.oneprojectModel
@{
    bool isArabic = Model.TranslationService.GetCurrentLanguage() == "ar";
}

<link rel="stylesheet" href="~/css/oneproject.css" />
<!-- Hero Section with Carousel -->
<section class="project-hero">
    <div class="project-carousel">
        <div id="projectCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model.ImagePaths)
                {
                    <div class="carousel-item @(Model.ImagePaths.First() == item ? "active" : "")">
                        <img src="~/uploads/properties/@item.Substring(19)" class="d-block w-100" alt="@Model.TranslationService.GetTranslation("projectHero6.carouselAlt")">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">@Model.TranslationService.GetTranslation("projectHero6.prevButton")</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">@Model.TranslationService.GetTranslation("projectHero6.nextButton")</span>
            </button>
        </div>
    </div>

    <div class="project-info-overlay">
        <div class="container">
            <div class="project-header">
                <div class="project-tags">
                    <span class="tag">
                        <i class="fas fa-map-marker-alt"></i>
                        @(isArabic ? Model.property.LocationAr : Model.property.LocationEn)
                    </span>
                    <span class="tag">
                        <i class="fas fa-home"></i>
                        @(isArabic ? Model.property.LotTypeAr : Model.property.LotTypeEn)
                    </span>
                </div>
                <h1 class="cairo">@Model.property.NameEn</h1>
                <div class="project-price">
                    <span>@Model.TranslationService.GetTranslation("projectHero6.pricePrefix")</span>
                    <h2>@Model.property.Price.ToString("N0") @Model.TranslationService.GetTranslation("projectHero6.currency")</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Project Description -->
<section class="project-description py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="description-content">
                    <h3>@Model.TranslationService.GetTranslation("projectDescription6.overviewTitle")</h3>
                    <div class="separator"></div>
                    <p class="cairo">@Model.property.NameAr</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="quick-info">
                    <div class="info-item">
                        <i class="fas fa-ruler-combined"></i>
                        <div>
                            <h4>@Model.TranslationService.GetTranslation("projectDescription6.unitSizeTitle")</h4>
                            <p>@Model.property.UnitSize @Model.TranslationService.GetTranslation("projectDescription6.unitSizeSuffix")</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-calendar-alt"></i>
                        <div>
                            <h4>@Model.TranslationService.GetTranslation("projectDescription6.deliveryDateTitle")</h4>
                            <p>@Model.property.DeliveryDate</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
