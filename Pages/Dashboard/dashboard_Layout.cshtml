<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Wonderland Real Estate</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
<style>
        .cairo {
            font-family: "Cairo", serif;
            font-optical-sizing: auto;
            font-style: normal;
            font-variation-settings: "slnt" 0;
        }
</style>
</head>
<body>
    <div class="dashboard-container d-flex">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h3>Wonderland</h3>
                <span class="admin-badge">Admin Panel</span>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <h6 class="nav-title">MAIN</h6>
                    <a asp-page="/Dashboard/index" class="nav-link active">
                        <i class="fas fa-th-large"></i>
                        <span>Dashboard</span>
                    </a>
                </div>

                <div class="nav-section">
                    <h6 class="nav-title">MANAGEMENT</h6>
                    <a asp-page="/Dashboard/Projects" class="nav-link">
                        <i class="fas fa-building"></i>
                        <span>Projects</span>
                    </a>
                    <a asp-page="/Dashboard/Developers" class="nav-link">
                        <i class="fas fa-city"></i>
                        <span>Developers</span>
                    </a>
                    <a asp-page="/Dashboard/Properties" class="nav-link">
                        <i class="fas fa-home"></i>
                        <span>Properties</span>
                    </a>
                </div>

                <div class="nav-section">
                    <h6 class="nav-title">SETTINGS</h6>
                    <a href="#" class="nav-link">
                        <i class="fas fa-cog"></i>
                        <span>General Settings</span>
                    </a>
                    <a href="#" class="nav-link">
                        <i class="fas fa-user"></i>
                        <span>Profile</span>
                    </a>
                </div>
            </nav>

            <div class="sidebar-footer">
                <a href="#" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://kit.fontawesome.com/6ecc6d6700.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>