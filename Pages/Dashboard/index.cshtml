                    </div>
                    <div class="mb-3">
                        <label style="font-family:Cairo;">الوصف بالعربي</label>
                        <textarea asp-for="Developer.DescriptionAr" class="form-control"></textarea>
                        <span asp-validation-for="Developer.DescriptionAr" class="text-danger"></span>
