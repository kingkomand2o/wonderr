@page
@model wonderr.Pages.AboutUsModel
@{
}

    <link rel="stylesheet" href="~/css/aboutus.css">

    <!-- Hero Section -->
    <section class="about-hero">
        <div class="hero-background"></div>
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-lg-6 hero-content" data-aos="fade-right">
                    <div class="accent-line"></div>
                    <h1>Crafting Real Estate Excellence</h1>
                    <p class="lead">Building dreams into reality, one property at a time</p>
                    <div class="hero-stats">
                        <div class="stat-item">
                            <span class="stat-number">10+</span>
                            <span class="stat-label">Years Experience</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">500+</span>
                            <span class="stat-label">Properties Sold</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">98%</span>
                            <span class="stat-label">Client Satisfaction</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="values-section py-6">
        <div class="container">
            <div class="section-header text-center" data-aos="fade-up">
                <span class="subtitle">Our Core Values</span>
                <h2>What Drives Us Forward</h2>
                <div class="separator-center"></div>
            </div>
            <div class="row g-4 mt-5">
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="value-card">
                        <div class="icon-wrapper">
                            <i class="fas fa-star"></i>
                        </div>
                        <h3>Excellence</h3>
                        <p>Striving for perfection in every transaction</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="value-card">
                        <div class="icon-wrapper">
                            <i class="fas fa-handshake"></i>
                        </div>
                        <h3>Trust</h3>
                        <p>Building lasting relationships through transparency</p>
                    </div>
                </div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                    <div class="value-card">
                        <div class="icon-wrapper">
                            <i class="fas fa-lightbulb"></i>
                        </div>
                        <h3>Innovation</h3>
                        <p>Embracing new solutions for modern challenges</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Journey Section -->
    <section class="milestone-section">
        <div class="container">
            <div class="milestone-header text-center mb-5">
                <p class="milestone-tagline">Our Path to Success</p>
                <h2 class="milestone-title">Milestones of Achievement</h2>
            </div>
            <div class="row">
                <!-- Timeline (Left) -->
                <div class="col-lg-6">
                    <div class="milestone-timeline">
                        <div class="milestone-entry">
                            <span class="milestone-date">2014</span>
                            <div class="milestone-content">
                                <h4 class="milestone-event-title">Company Founded</h4>
                                <p class="milestone-description">Began with a mission to transform real estate experiences worldwide.</p>
                            </div>
                        </div>
                        <div class="milestone-entry">
                            <span class="milestone-date">2018</span>
                            <div class="milestone-content">
                                <h4 class="milestone-event-title">Market Leader</h4>
                                <p class="milestone-description">Achieved recognition as a top real estate consultant in the region.</p>
                            </div>
                        </div>
                        <div class="milestone-entry">
                            <span class="milestone-date">2024</span>
                            <div class="milestone-content">
                                <h4 class="milestone-event-title">Global Expansion</h4>
                                <p class="milestone-description">Launched international operations, expanding our impact globally.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Image (Right) -->
                <div class="col-lg-6">
                    <div class="milestone-image">
                        <img src="img/administrative.jpg" alt="Our Journey" class="img-fluid rounded-3 shadow">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="about-contact-section">
        <div class="container">
            <!-- Section Header -->
            <div class="section-header text-center">
                <h2>Get in Touch</h2>
                <div class="separator-center"></div>
                <p class="section-description">Have questions? We'd love to hear from you. Here's how you can reach us.</p>
            </div>

            <!-- Contact Options -->
            <div class="about-contact-grid">
                <!-- Row 1 -->
                <div class="about-contact-item">
                    <i class="fas fa-phone"></i>
                    <div class="about-contact-details">
                        <h4>Call Us</h4>
                        <p>Main Office: +971 4 123 4567</p>
                        <p>Sales Team: +971 4 234 5678</p>
                    </div>
                </div>

                <div class="about-contact-item">
                    <i class="fas fa-envelope"></i>
                    <div class="about-contact-details">
                        <h4>Email Us</h4>
                        <p>info@address.com</p>
                        <p>sales@address.com</p>
                    </div>
                </div>

                <!-- Row 2 -->
                <div class="about-contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div class="about-contact-details">
                        <h4>Visit Us</h4>
                        <p>The Address Investments</p>
                        <p>Dubai Marina, UAE</p>
                    </div>
                </div>

                <div class="about-contact-item">
                    <i class="fas fa-clock"></i>
                    <div class="about-contact-details">
                        <h4>Working Hours</h4>
                        <p>Monday - Friday: 9:00 AM - 6:00 PM</p>
                        <p>Saturday: 10:00 AM - 2:00 PM</p>
                    </div>
                </div>
            </div>

            <!-- Social Links -->
            <div class="about-social-section">
                <h5>Follow Us</h5>
                <div class="about-social-links">
                    <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" title="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                </div>
            </div>
        </div>
    </section>