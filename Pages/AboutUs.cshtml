@page
@model wonderr.Pages.AboutUsModel
@{
}

<link rel="stylesheet" href="~/css/aboutus.css">

<!-- Hero Section -->
<section class="about-hero">
    <div class="hero-background"></div>
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-lg-6 hero-content" data-aos="fade-right">
                <div class="accent-line"></div>
                <h1>@Model.TranslationService.GetTranslation("hero2.title")</h1>
                <p class="lead">@Model.TranslationService.GetTranslation("hero2.description")</p>
                <div class="hero-stats">
                    <div class="stat-item">
                        <span class="stat-number">@Model.TranslationService.GetTranslation("hero2.stats.yearsExperience")</span>
                        <span class="stat-label">@Model.TranslationService.GetTranslation("hero2.stats.yearsExperienceLabel")</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">@Model.TranslationService.GetTranslation("hero2.stats.propertiesSold")</span>
                        <span class="stat-label">@Model.TranslationService.GetTranslation("hero2.stats.propertiesSoldLabel")</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">@Model.TranslationService.GetTranslation("hero2.stats.clientSatisfaction")</span>
                        <span class="stat-label">@Model.TranslationService.GetTranslation("hero2.stats.clientSatisfactionLabel")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="values-section py-6">
    <div class="container">
        <div class="section-header text-center" data-aos="fade-up">
            <span class="subtitle">@Model.TranslationService.GetTranslation("values2.subtitle")</span>
            <h2>@Model.TranslationService.GetTranslation("values2.sectionTitle")</h2>
            <div class="separator-center"></div>
        </div>
        <div class="row g-4 mt-5">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="value-card">
                    <div class="icon-wrapper">
                        <i class="fas fa-star"></i>
                    </div>
                    <h3>@Model.TranslationService.GetTranslation("values2.excellence.title")</h3>
                    <p>@Model.TranslationService.GetTranslation("values2.excellence.description")</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="value-card">
                    <div class="icon-wrapper">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h3>@Model.TranslationService.GetTranslation("values2.trust.title")</h3>
                    <p>@Model.TranslationService.GetTranslation("values2.trust.description")</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="value-card">
                    <div class="icon-wrapper">
                        <i class="fas fa-lightbulb"></i>
                    </div>
                    <h3>@Model.TranslationService.GetTranslation("values2.innovation.title")</h3>
                    <p>@Model.TranslationService.GetTranslation("values2.innovation.description")</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our Journey Section -->
<section class="milestone-section">
    <div class="container">
        <div class="milestone-header text-center mb-5">
            <p class="milestone-tagline">@Model.TranslationService.GetTranslation("milestones2.tagline")</p>
            <h2 class="milestone-title">@Model.TranslationService.GetTranslation("milestones2.sectionTitle")</h2>
        </div>
        <div class="row">
            <!-- Timeline (Left) -->
            <div class="col-lg-6">
                <div class="milestone-timeline">
                    <div class="milestone-entry">
                        <span class="milestone-date">@Model.TranslationService.GetTranslation("milestones2.entry1.date")</span>
                        <div class="milestone-content">
                            <h4 class="milestone-event-title">@Model.TranslationService.GetTranslation("milestones2.entry1.title")</h4>
                            <p class="milestone-description">@Model.TranslationService.GetTranslation("milestones2.entry1.description")</p>
                        </div>
                    </div>
                    <div class="milestone-entry">
                        <span class="milestone-date">@Model.TranslationService.GetTranslation("milestones2.entry2.date")</span>
                        <div class="milestone-content">
                            <h4 class="milestone-event-title">@Model.TranslationService.GetTranslation("milestones2.entry2.title")</h4>
                            <p class="milestone-description">@Model.TranslationService.GetTranslation("milestones2.entry2.description")</p>
                        </div>
                    </div>
                    <div class="milestone-entry">
                        <span class="milestone-date">@Model.TranslationService.GetTranslation("milestones2.entry3.date")</span>
                        <div class="milestone-content">
                            <h4 class="milestone-event-title">@Model.TranslationService.GetTranslation("milestones2.entry3.title")</h4>
                            <p class="milestone-description">@Model.TranslationService.GetTranslation("milestones2.entry3.description")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Image (Right) -->
            <div class="col-lg-6">
                <div class="milestone-image">
                    <img src="img/administrative.jpg" alt="@Model.TranslationService.GetTranslation("milestones2.imageAlt")" class="img-fluid rounded-3 shadow">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="about-contact-section">
    <div class="container">
        <!-- Section Header -->
        <div class="section-header text-center">
            <h2>@Model.TranslationService.GetTranslation("contact2.sectionTitle")</h2>
            <div class="separator-center"></div>
            <p class="section-description">@Model.TranslationService.GetTranslation("contact2.description")</p>
        </div>

        <!-- Contact Options -->
        <div class="about-contact-grid">
            <div class="about-contact-item">
                <i class="fas fa-phone"></i>
                <div class="about-contact-details">
                    <h4>@Model.TranslationService.GetTranslation("contact2.callUs.title")</h4>
                    <p>@Model.TranslationService.GetTranslation("contact2.callUs.mainOffice")</p>
                    <p>@Model.TranslationService.GetTranslation("contact2.callUs.secondaryOffice")</p>
                </div>
            </div>

            <div class="about-contact-item">
                <i class="fas fa-envelope"></i>
                <div class="about-contact-details">
                    <h4>@Model.TranslationService.GetTranslation("contact2.emailUs.title")</h4>
                    <p>@Model.TranslationService.GetTranslation("contact2.emailUs.email")</p>
                </div>
            </div>

            <div class="about-contact-item">
                <i class="fas fa-map-marker-alt"></i>
                <div class="about-contact-details">
                    <h4>@Model.TranslationService.GetTranslation("contact2.visitUs.title")</h4>
                    <p>@Model.TranslationService.GetTranslation("contact2.visitUs.addressLine1")</p>
                    <p>@Model.TranslationService.GetTranslation("contact2.visitUs.addressLine2")</p>
                </div>
            </div>

            <div class="about-contact-item">
                <i class="fas fa-clock"></i>
                <div class="about-contact-details">
                    <h4>@Model.TranslationService.GetTranslation("contact2.workingHours.title")</h4>
                    <p>@Model.TranslationService.GetTranslation("contact2.workingHours.weekdays")</p>
                    <p>@Model.TranslationService.GetTranslation("contact2.workingHours.saturday")</p>
                </div>
            </div>
        </div>

        <!-- Social Links -->
        <div class="about-social-section">
            <h5>@Model.TranslationService.GetTranslation("contact2.socialLinks.title")</h5>
            <div class="about-social-links">
                <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" title="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </div>
</section>
