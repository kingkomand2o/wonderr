@page "/PL/{id:int}"
@model wonderr.Pages.PLModel

@{
    ViewData["Title"] = "PL";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var isArabic = Model.TranslationService.GetCurrentLanguage() == "ar";
}

<link rel="stylesheet" href="~/css/oneproject.css" />

<!-- Hero Section with Carousel -->
<section class="project-hero">
    <div class="project-carousel">
        <div id="projectCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/product/@Model.project.Image.Substring(8)" class="d-block w-100" alt="@Model.TranslationService.GetTranslation("projectHero5.carouselAlt")">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">@Model.TranslationService.GetTranslation("projectHero5.prevButton")</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">@Model.TranslationService.GetTranslation("projectHero5.nextButton")</span>
            </button>
        </div>
    </div>

    <div class="project-info-overlay">
        <div class="container">
            <div class="project-header">
                <div class="project-tags">
                    <span class="tag"><i class="fas fa-map-marker-alt"></i> @(isArabic ? Model.project.LocationAr : Model.project.LocationEn)</span>
                    <span class="tag"><i class="fas fa-home"></i> @Model.TranslationService.GetTranslation("projectHero5.tags.deliveryDate"): @Model.project.DeliveryDate</span>
                </div>
                <h1 class="cairo">@(isArabic ? Model.project.NameAr : Model.project.NameEn)</h1>
                <div class="project-price">
                    <span>@Model.TranslationService.GetTranslation("projectHero5.pricePrefix")</span>
                    <h2>@Model.project.Price.ToString("N0") @Model.TranslationService.GetTranslation("projectHero5.currency")</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Project Description -->
<section class="project-description py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="description-content">
                    <h3>@Model.TranslationService.GetTranslation("projectDescription5.overviewTitle")</h3>
                    <div class="separator"></div>
                    <p class="cairo">@(isArabic ? Model.project.OverviewAr : Model.project.OverviewEn)</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="quick-info">
                    <div class="info-item">
                        <i class="fas fa-calendar-alt"></i>
                        <div>
                            <h4>@Model.TranslationService.GetTranslation("projectDescription5.deliveryDateTitle")</h4>
                            <p>@Model.project.DeliveryDate</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
